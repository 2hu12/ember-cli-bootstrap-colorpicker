<div class="row">
  <form class="col-sm-6">

    <div class="row">
      <div class="col-sm-6">
        {{bs-colorpicker color=color format="hex" type="text" classNames="form-control" tagName="input"}}
      </div>

      <div class="col-sm-6">
        {{input classNames="form-control" type="text" value=color}}
      </div>
    </div>

    {{#bs-colorpicker color=color format="hex" classNames="input-group"}}
      <input type="text" class="form-control">
      <span class="input-group-addon"><i></i></span>
    {{/bs-colorpicker}}

    {{#bs-colorpicker color=color format="hex" style=colorStyle classNames="btn btn-default"}}
      Change color
    {{/bs-colorpicker}}

  </form>
</div>
